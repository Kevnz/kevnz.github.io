<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A layout example that shows off a blog page with a list of posts.">

    <title>Kevin Isom &ndash; </title>

    <link rel="stylesheet" href="/css/style.css"> 
    <link rel="stylesheet" href="/css/blog.css">
</head>
<body>

<div id="layout" class="kev-g">
    <div class="sidebar kev-u-1 kev-u-md-1-4">
        <div class="header">
            <h1 class="brand-title">Kevin Isom</h1>
            <h2 class="brand-tagline">Software Engineer with a front end focus</h2>

            <nav class="nav">
                <ul class="nav-list">
                    <li class="nav-item">
                        <a class="kev-button" href="https://twitter.com/kev_nz">Twitter</a>
                    </li>
                    <li class="nav-item">
                        <a class="kev-button" href="https://github.com/kevnz">GitHub</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>

    <div class="content kev-u-1 kev-u-md-3-4">
        <div>
            <!-- A wrapper for all the blog posts -->
            <div class="posts">
                <h1 class="content-subhead">Most Recent Post</h1>

                <!-- A single blog post -->
                <section class="post">
                    <header class="post-header">
                        <img class="post-avatar" alt="Kevin Isom&#x27;s avatar" height="48" width="48" src="/img/kevin-avatar.png">

                        <h2 class="post-title"><%= post.title %></h2>

                        <p class="post-meta">
                            By <a href="#" class="post-author">Kevin Isom</a> under <%
                            if (post.tags.length === 0) {
                                %>
                                <a class="post-category post-category-design" href="#">general</a> 
                                <%
                            }
                            for (var i = 0; i < post.tags.length; i++) {
                            %>
                                <a class="post-category post-category-design" href="#"><%= post.tags[i] %></a>
                            <%
                            }
                            %>
                        </p>
                    </header>

                    <div class="post-description">
                        <%- post.body %>
                    </div>
                </section>
            </div>

            <div class="footer">
                <div class="kev-menu kev-menu-horizontal kev-menu-open">
                    <ul>
                        <li><a href="http://kevinisom.info/">About</a></li>
                        <li><a href="https://twitter.com/kev_nz/">Twitter</a></li>
                        <li><a href="https://github.com/kevnz/">GitHub</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-1847639-1', 'auto');
  ga('send', 'pageview');

</script>
</body>
</html>
